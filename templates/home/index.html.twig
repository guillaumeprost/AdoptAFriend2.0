{% extends 'base.html.twig' %}

{% block header %}
    <main class="flex-shrink-0">
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Adopt a friend</h1>
                    <p class="lead text-muted">Welcome, have a look a find your perfect BFF</p>
                    <p>
                        <a href="{{ path('animal_search') }}" class="btn btn-primary my-2">Chercher un animal</a>
                        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
                    </p>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for animal in lastAnimals %}
                        {% include '/animal/include/card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}