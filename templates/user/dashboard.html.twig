{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="mt-5">Bienvenue {{ app.user.firstName }} {{ app.user.name }}</h1>
        <br>
        <div class="row">
            <div class="col col-md-6">
                <h3> Votre association </h3>
                {% if app.user.organisation %}
                    {% include '/organisation/include/_card.html.twig' with {'organisation': app.user.organisation, 'manage': true} %}
                {% else %}
                    <div class="col col-md-6">
                        <div class="alert alert-secondary" role="alert">
                            Vous n'avez pas d'association
                        </div>
                        <button type="button" class="btn btn-primary" href="{{ url('organisation_create') }}">Créer une
                            association
                        </button>
                    </div>
                {% endif %}
            </div>
            <div class="col col-md-6">
                {% set hasAdoptionRequests = false %}
                {% if adoptionRequestsReceived|length > 0 %}
                    {% set hasAdoptionRequests = true %}
                    <h3> Vos dernières demandes d'adoptions Recues</h3>
                    {% include 'adoption-request/include/_list.html.twig' with {'adoptionRequests': adoptionRequestsReceived} %}
                {% endif %}
                {% if adoptionRequestsSent|length > 0 %}
                    {% set hasAdoptionRequests = true %}
                    <h3> Vos dernières demandes d'adoptions Envoyées</h3>
                    {% include 'adoption-request/include/_list.html.twig' with {'adoptionRequests': adoptionRequestsSent} %}
                {% endif %}
                {% if hasAdoptionRequests == false %}
                    <div class="alert alert-secondary" role="alert">
                        Vous n'avez pas de demandes d'adoptions
                    </div>
                {% endif %}
            </div>
        </div>
        <br>
        <hr class="my-4">
        <div class="row">
                <div class="col col-md-6">
                    <h3> Vos animaux </h3>
                </div>
                <div class="col col-md-6">
                    <a type="button" class="btn btn-primary" href="{{ url('animal_create', {'type':'dog'}) }}">Ajouter
                        un
                        animal à adopter</a>
                </div>
            {% if app.user.animals|length > 0 %}
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
                    {% for animal in app.user.animals %}
                        {% include '/animal/include/_card.html.twig' with {'manage': true} %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <br>
    </div>

{% endblock content %}