{% extends 'base.html.twig' %}

{% block content %}
    <div class="p-5 py-5">

        {# En-tête de bienvenue #}
        <div class="d-flex align-items-center gap-3 mb-4">
            <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center shadow-sm"
                 style="width:56px;height:56px;">
                <i class="fas fa-user"></i>
            </div>
            <div>
                <h1 class="h3 mb-1">Bonjour, {{ app.user.firstName }} {{ app.user.name }}</h1>
                <div class="text-muted">Ravi de vous revoir sur votre espace</div>
            </div>
        </div>

        {# Statistiques #}
        {% set receivedCount = adoptionRequestsReceived|length %}
        {% set sentCount = adoptionRequestsSent|length %}
        {% set animalsCount = app.user.animals|length %}
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center me-3"
                             style="width:44px;height:44px;">
                            <i class="fas fa-paw"></i>
                        </div>
                        <div>
                            <div class="fw-bold">{{ animalsCount }}</div>
                            <div class="text-muted small">Vos animaux</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-success-subtle text-success d-flex align-items-center justify-content-center me-3"
                             style="width:44px;height:44px;">
                            <i class="fas fa-inbox"></i>
                        </div>
                        <div>
                            <div class="fw-bold">{{ receivedCount }}</div>
                            <div class="text-muted small">Demandes reçues</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-info-subtle text-info d-flex align-items-center justify-content-center me-3"
                             style="width:44px;height:44px;">
                            <i class="fas fa-paper-plane"></i>
                        </div>
                        <div>
                            <div class="fw-bold">{{ sentCount }}</div>
                            <div class="text-muted small">Demandes envoyées</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Contenu principal #}
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h3 class="h5 mb-0"><i class="fas fa-building me-2 text-primary"></i>Votre association</h3>
                    </div>
                    <div class="card-body">
                        {% if app.user.organisation %}
                            {% include '/organisation/include/_card.html.twig' with {'organisation': app.user.organisation, 'manage': true} %}
                        {% else %}
                            <div class="text-center py-4">
                                <div class="mb-3">
                                    <i class="fas fa-building text-secondary fa-2x"></i>
                                </div>
                                <p class="text-muted mb-3">Vous n'avez pas encore d'association.</p>
                                <a class="btn btn-primary" href="{{ path('organisation_create') }}">
                                    <i class="fas fa-plus me-2"></i>Créer mon association
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h3 class="h5 mb-0"><i class="fas fa-envelope-open-text me-2 text-success"></i>Vos demandes d'adoption</h3>
                    </div>
                    <div class="card-body">
                        {% set hasAdoptionRequests = false %}

                        {% if receivedCount > 0 %}
                            {% set hasAdoptionRequests = true %}
                            <h4 class="h6 text-muted mb-2">Demandes reçues</h4>
                            {% include 'adoption-request/include/_list.html.twig' with {'adoptionRequests': adoptionRequestsReceived} %}
                            <hr>
                        {% endif %}

                        {% if sentCount > 0 %}
                            {% set hasAdoptionRequests = true %}
                            <h4 class="h6 text-muted mb-2">Demandes envoyées</h4>
                            {% include 'adoption-request/include/_list.html.twig' with {'adoptionRequests': adoptionRequestsSent} %}
                        {% endif %}

                        {% if hasAdoptionRequests == false %}
                            <div class="text-center py-4">
                                <div class="mb-3">
                                    <i class="fas fa-folder-open text-secondary fa-2x"></i>
                                </div>
                                <p class="text-muted mb-3">Vous n'avez pas de demandes d'adoption pour le moment.</p>
                                <a href="{{ path('animal_search') }}" class="btn btn-outline-primary">
                                    <i class="fas fa-search me-2"></i>Parcourir les animaux
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Vos animaux #}
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-transparent border-0 pt-3 d-flex justify-content-between align-items-center">
                <h3 class="h5 mb-0"><i class="fas fa-paw me-2 text-primary"></i>Vos animaux</h3>
                <a class="btn btn-primary" href="{{ path('animal_create', {'type': 'dog'}) }}">
                    <i class="fas fa-plus me-2"></i>Ajouter un animal
                </a>
            </div>
            <div class="card-body">
                {% if animalsCount > 0 %}
                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
                        {% for animal in app.user.animals %}
                            {% include '/animal/include/_card.html.twig' with {'manage': true} %}
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <div class="mb-3">
                            <i class="fas fa-paw text-secondary fa-2x"></i>
                        </div>
                        <p class="text-muted mb-3">Vous n'avez pas encore ajouté d'animal à l'adoption.</p>
                        <a class="btn btn-outline-primary" href="{{ path('animal_create', {'type': 'dog'}) }}">
                            <i class="fas fa-plus me-2"></i>Ajouter mon premier animal
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}