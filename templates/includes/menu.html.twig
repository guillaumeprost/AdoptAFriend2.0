<div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container">
        <a href="{{ path('homepage') }}" class="navbar-brand d-flex align-items-center">
            <strong>Adopt A Friend</strong>
        </a>
        <nav class="navbar navbar-dark bg-dark shadow-sm navbar-expand-lg bg">
            <div class="container-fluid collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"
                           href="{{ url('animal_search', {'type':'dog'}) }}">Chercher un chien</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"
                           href="{{ url('animal_create', {'type':'dog'}) }}">Ajouter un chien</a>
