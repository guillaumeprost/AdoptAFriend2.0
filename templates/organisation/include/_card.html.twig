<div class="col pt-3 organisation-card pb-3 p-3">
    <div class="card h-100 clickable"  data-link= {{ path('organisation_display', {'id':organisation.id}) }}>
        {% if organisation.images|length > 0 %}
            <img src="{{ asset('/upload/organisation/images/'~ organisation.images|first()) }}" class="img-fluid d-block card-img-top"
                 alt="{{ organisation.name }}">
        {% else %}
            <img src="{{ asset('/upload/organisation/default-banner.jpg') }}" class="img-fluid d-block card-img-top"
                 alt="{{ organisation.name }}">
        {% endif %}
        <div class="card-body">
            <div class="row">
                <div class="col">
                    {% if organisation.images|length > 0 %}
                    <img src="{{ asset('/upload/organisation/logo/'~ organisation.logo) }}" class="img-thumbnail"
                         alt="{{ organisation.name }}">
                    {% else %}
                        <img src="{{ asset('/upload/organisation/logo/logo1.jpg') }}" class="img-thumbnail"
                             alt="{{ organisation.name }}">
                    {% endif %}
                </div>
                <div class="col">
                    <h1>{{ organisation.name }}</h1>
                    <br>
                    {{ organisation.description }}
                </div>
            </div>

            {% if manage|default(false) == true %}
                <br>
                <div class="row">
                    <div class="col">
                        <a type="button" class="btn btn-primary fa-pull-right" href="{{ path('organisation_update', {id: organisation.id}) }}">Modifier</a>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-danger">Supprimer</button>
                    </div>
                </div>
            {% endif %}
            
        </div>


        <div class="card-footer">
            <div class="row justify-content-md-end">
                <a type="button" class="btn btn-primary" href="{{ path('organisation_display', {id: organisation.id}) }}">Voir</a>
            </div>
        </div>
    </div>
</div>