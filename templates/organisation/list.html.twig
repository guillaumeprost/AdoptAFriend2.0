{% extends 'base.html.twig' %}

{% block content %}
    <section class="organisations-list-page py-5 px-4">
        <div class="container-fluid">

            <!-- En-t√™te de section -->
            <div class="organisations-hero mb-4 p-4 rounded-4 shadow-sm">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                    <div>
                        <h1 class="h2 mb-1">Associations</h1>
                        <p class="text-muted mb-0">D√©couvrez nos associations partenaires</p>
                    </div>
                    <span class="badge bg-primary-subtle text-primary-emphasis px-3 py-2">
                        <i class="fas fa-building me-2"></i>{{ total }} trouv√©es
                    </span>
                </div>
            </div>

            <!-- Barre de filtres -->
            <div class="filters-bar mb-4 p-4 bg-body-tertiary border rounded-4 shadow-sm">
                {{ include('organisation/include/_search-form.html.twig') }}
            </div>

            <!-- Grille d'associations -->
            <div class="organisations-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                {% for organisation in organisations %}
                    <div class="col">
                        {% include '/organisation/include/_card.html.twig' %}
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="empty-state text-center p-5 bg-white border rounded-4 shadow-sm">
                            <div class="display-6 mb-3">üè¢</div>
                            <h3 class="mb-2">Aucune association trouv√©e</h3>
                            <p class="text-muted mb-4">Essayez d'ajuster vos crit√®res ou r√©initialisez la recherche.</p>
                            <a href="{{ path('organisation_search') }}" class="btn btn-primary">R√©initialiser la recherche</a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <hr class="my-4">
            <nav aria-label="Pagination associations">
                {% if pageCount > 1 %}
                <ul class="pagination pagination-lg justify-content-center organisations-pagination">
                    <li class="page-item {% if page <= 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('organisation_search', {'page': page > 1 ? page-1 : 1}) }}" aria-label="Pr√©c√©dent" tabindex="{% if page <= 1 %}-1{% else %}0{% endif %}">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    {# Calcule la fen√™tre sans |max / |min #}
                    {% set start = page - 2 %}
                    {% if start < 1 %}{% set start = 1 %}{% endif %}
                    {% set end = page + 2 %}
                    {% if end > pageCount %}{% set end = pageCount %}{% endif %}

                    {% if (end - start) < 4 %}
                        {% set start = end - 4 %}
                        {% if start < 1 %}{% set start = 1 %}{% endif %}
                        {% set end = start + 4 %}
                        {% if end > pageCount %}{% set end = pageCount %}{% endif %}
                    {% endif %}

                    {% if start > 1 %}
                        <li class="page-item"><a class="page-link" href="{{ path('organisation_search', {'page': 1}) }}">1</a></li>
                        {% if start > 2 %}
                            <li class="page-item disabled"><span class="page-link">‚Ä¶</span></li>
                        {% endif %}
                    {% endif %}

                    {% for pageNumber in start..end %}
                        <li class="page-item {% if page == pageNumber %}active{% endif %}">
                            <a class="page-link" href="{{ path('organisation_search', {'page': pageNumber}) }}">{{ pageNumber }}</a>
                        </li>
                    {% endfor %}

                    {% if end < pageCount %}
                        {% if end < pageCount - 1 %}
                            <li class="page-item disabled"><span class="page-link">‚Ä¶</span></li>
                        {% endif %}
                        <li class="page-item"><a class="page-link" href="{{ path('organisation_search', {'page': pageCount}) }}">{{ pageCount }}</a></li>
                    {% endif %}

                    <li class="page-item {% if page >= pageCount %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('organisation_search', {'page': page < pageCount ? page+1 : pageCount}) }}" aria-label="Suivant">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
                {% endif %}
            </nav>
        </div>
    </section>
{% endblock %}
