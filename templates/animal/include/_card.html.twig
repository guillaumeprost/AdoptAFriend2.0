<div class="animal-card">
    <div class="card h-100">
        <div class="position-relative">

            <img src="{% if animal.images|length > 0 %}
                    {{ asset('/upload/animal/'~ constant('DISCRIMINATOR', animal) ~'/'~ animal.images|first()) }}
                 {% else %}
                     {{ asset('/upload/animal/'~ constant('DISCRIMINATOR', animal) ~'/default.jpg') }}
                    {% endif %} "
                 class="card-img-top" 
                 alt="{{ animal.name }}"
                 style="height: 250px; object-fit: cover;"
                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
            <div class="card-overlay" style="display: none;">
                <div class="overlay-content">
                    <i class="fas fa-eye fa-3x mb-2"></i>
                    <h5>Voir les détails</h5>
                </div>
            </div>
        </div>
        
        <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0">{{ animal.name }}</h5>
                <div class="sex-indicator">
                    {% if animal.sex == 'M' %}
                        <i class="fas fa-mars text-primary"></i>
                    {% else %}
                        <i class="fas fa-venus text-danger"></i>
                    {% endif %}
                </div>
            </div>
            
            <div class="mb-3">
                {% if animal.status == 'adopted' %}
                    <span class="badge bg-success">
                        <i class="fas fa-check me-1"></i>Adopté
                    </span>
                {% else %}
                    <span class="badge bg-primary">
                        <i class="fas fa-heart me-1"></i>Disponible
                    </span>
                {% endif %}

                    <span class="badge bg-info">
                        <i class="fas fa-dog me-1"></i>Chien
                    </span>
            </div>
            
            <p class="card-text text-muted mb-3">
                {{ animal.description|length > 80 ? animal.description|slice(0, 80) ~ '...' : animal.description }}
            </p>
            
            <div class="affinities-section mb-3">
                <h6><i class="fas fa-star me-1"></i>Affinités</h6>
                <div class="d-flex flex-wrap gap-1">
                    {% if animal.childAffinities %}
                        <span class="affinity-badge">
                            <i class="fas fa-baby me-1"></i>Enfants: {{ animal.childAffinities.value }}
                        </span>
                    {% endif %}
                    {% if animal.dogsAffinities %}
                        <span class="affinity-badge">
                            <i class="fas fa-dog me-1"></i>Chiens: {{ animal.dogsAffinities.value }}
                        </span>
                    {% endif %}
                    {% if animal.catsAffinities %}
                        <span class="affinity-badge">
                            <i class="fas fa-cat me-1"></i>Chats: {{ animal.catsAffinities.value }}
                        </span>
                    {% endif %}
                </div>
            </div>
            
            <div class="vet-care-section mb-3">
                <h6><i class="fas fa-stethoscope me-1"></i>Soins vétérinaires</h6>
                <div class="d-flex flex-wrap gap-1">
                    {% if animal.vaccination %}
                        <span class="care-badge">
                            <i class="fas fa-syringe me-1"></i>Vacciné
                        </span>
                    {% endif %}
                    {% if animal.sterilized %}
                        <span class="care-badge">
                            <i class="fas fa-cut me-1"></i>Stérilisé
                        </span>
                    {% endif %}
                    {% if animal.dewormed %}
                        <span class="care-badge">
                            <i class="fas fa-pills me-1"></i>Vermifugé
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="card-footer bg-transparent border-0">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i>
                        Adresse non disponible
                </small>
                <a href="{{ path('animal_display', {'id': animal.id}) }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-eye me-1"></i>Voir
                </a>
            </div>
        </div>
    </div>
</div>